rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /spaces/{spaceId} {
      // Temporarily allow reads for any authenticated user to fix dashboard loading.
      // This allows the list query to succeed.
      allow read: if request.auth.uid != null;

      // Create, update, delete permissions remain more secure.
      allow create: if request.auth.uid != null;
      allow update: if request.auth.uid in resource.data.memberIds;
      allow delete: if request.auth.uid == resource.data.team[0].id;

      match /{path=**} {
        allow read, write: if request.auth.uid in get(/databases/$(database)/documents/spaces/$(spaceId)).data.memberIds;
      }
    }

    match /invites/{inviteId} {
      // Allow authenticated users to read and write to invites.
      // Reads are needed for the dashboard, writes for accepting/declining.
      allow read, write: if request.auth.uid != null;
    }

    match /notifications/{notificationId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }
  }
}
